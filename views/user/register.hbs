<section class="py-5">
    <div class="container" style="width: 50%;">
        <h1 style="margin: 2%; text-align: center;">Register</h1>
        <div style="padding: 5%;">
            <form method="POST" action="/user/register">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                        placeholder="Enter email" name="email" value="{{email}}">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" value="{{password}}">
                </div>
                <div class="form-group">
                    <label for="rePassword">Re-Password</label>
                    <input type="password" class="form-control" id="rePassword" placeholder="Re-Password" name="rePassword" value="{{rePassword}}" > 
                </div>
                <div class="form-group">
                    <label for="userImage">User Image</label>
                    <input type="text" class="form-control" id="userImage" placeholder="User Image" name="userImage" value="{{userImage}}" > 
                </div>
                <div class="form-group">
                    <p>Already have account? <a href="/user/login">Login Now!</a></p>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>