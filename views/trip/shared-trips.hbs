<div class="container" style="height: auto;">
    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
        <h1 class="display-3">Welcome Sharetripers!</h1>
        <p class="lead">Sharedtrip is the best way to road across the country. <br> Find yours Sharedtrip's
            buddies, when you share with us yours trip plans and let the exploration begin!</p>
        <a href="offer-trip" class="btn btn-primary btn-lg">Offer trip!</a>
    </header>

    <!-- Page Features -->
    <div class="row text-center"">
        {{#each trips}}
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top"
                    src="{{carImage}}"
                    alt="">
                <div class="card-body">
                    <h4 class="card-title"><i class="fas fa-route"></i> {{startPoint}} - {{endPoint}}</h4>
                    <h5  class="mt-4"><i class="far fa-clock"></i> {{time}}</h5>
                    {{#if AvailableSeats}}
                        {{#if seat}}
                        <h5  class="mt-4"><i class="fas fa-user"></i> 1 seat left</h5>
                        {{else}}
                        <h5  class="mt-4"><i class="fas fa-users"></i> {{AvailableSeats}} seats left</h5>
                        {{/if}}
                    {{else}}
                    <h5  class="mt-4"><i class="fas fa-user-times"></i> {{AvailableSeats}} seats left</h5>
                    {{/if}}
                    <h5  class="mt-4"><i class="fas fa-hand-holding-usd"></i> Price : {{price}}</h5>
                </div>
                <div class="card-footer">
                    <a href="details/{{_id}}" class="btn btn-primary">Find Out More!</a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="container" style="height: 90vh;">
        <!-- Page Features -->
        <div class="row text-center">

            <div style="width: 100%;">
                <img style="max-width: 500px;" src="https://www.stagweb.co.uk/img/activities/big/sexyhitchhiker1.jpg" />
                <p class="lead" style=" width: 100%; text-align: center; font-size: 22px; font-style: italic;">
                    Hitchhiker time...</p>
            </div>
        </div>
        <!-- /.row -->
    </div>
        {{/each}}
    </div>
    <!-- /.row -->
</div>